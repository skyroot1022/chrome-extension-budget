{
    "name" : "chrome extension sample",
    "version": "1.0",
    "manifest_version": 2,

    "description": "crome extension tutorial",

    "icons": {
        "128": "favicon.ico"
    },

    "browser_action": {
        "default_icon": "favicon.ico",
        "default_popup": "popup.html"
    },

    "options_page": "options.html",

    "background": {
        "scripts": ["eventPage.js"],
        "persistent": false //event page
    },

    "permissions": [
        "storage",
        "notifications",
        "contextMenus"
    ]

}